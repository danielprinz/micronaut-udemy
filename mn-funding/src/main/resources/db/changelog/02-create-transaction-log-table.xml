<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
  <changeSet id="02" author="dp">
    <createTable tableName="transactions"
                 remarks="A table to contain all transactions of a all users">
      <column name="transaction_id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true"/>
      </column>
      <column name="user" type="uuid">
        <constraints nullable="false"/>
      </column>
      <column name="symbol" type="varchar(8)">
        <constraints nullable="false"/>
      </column>
      <column name="modification" type="decimal">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
</databaseChangeLog>
